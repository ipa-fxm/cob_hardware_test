<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="single" >

  <!-- common stuff -->
  <xacro:property name="M_PI" value="3.1415926535897931" />

  <link name="world" />

  <joint name="single_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="world"/>
    <child link="tip_link"/>
    <axis xyz="0 0 1" />
    <dynamics damping="0" friction="0"/>
    <limit effort="15" velocity="50.0" lower="${-20*M_PI}" upper="${20*M_PI}"/>
  </joint>

  <link name="tip_link"/>

</robot>
